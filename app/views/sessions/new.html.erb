<%= form_for :user, :url => sessions_path, :html => {:class => 'form-horizontal'} do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, :class => "u-full-width" %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, :class => "u-full-width" %>
  </div>
  <div>
    <%= f.button t(".submit"), :class => "button button-primary u-full-width" %>
  </div>
<% end %>